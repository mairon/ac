<%= form_for(contact, remote: true) do |f| %>
<div class="modal-body">
		<div id="error_explanation_contacts"></div>
    <div class="form-group">
      <label for="recipient-name" class="control-label">Nome:</label>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for="recipient-name" class="control-label">E-mail:</label>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label for="recipient-name" class="control-label">Telefone:</label>
      <%= f.text_field :telephone, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label for="recipient-name" class="control-label">Mensagem:</label>
      <%= f.text_area :mensagem, class: 'form-control',  rows: 5 %>
      <%= f.hidden_field :set_type %>
    </div>
    <div class="form-group" align="right">
      <%= recaptcha_tags %>
    </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit 'Enviar', class: "btn btn-primary" %>
</div>
<% end %>
