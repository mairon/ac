<nav>
  <div class="breadCrumb module">
      <ul>
          <li>
              Cadastros
          </li>
          <li>&#187;</li>
          <li>
              Empresas
          </li>
      </ul>
  </div>
</nav>
<div style="color:red;">
<%= flash[:error] %>
</div>
<style type="text/css">
  
</style>
<div class="search_breadCrumb search">
  <div class="bts_grid">
  </div>
  <div class="row-fluid">
    <div class="span12">            
      <div data-fileupload="file" class="fileupload fileupload-new"><input type="hidden" />
        <div class="input-append">
          <%= link_to 'Novo', new_admin_company_path, :class => "btn" %>
        </div>
      </div>
      <table class="table table-bordered dTableR" id="dt_a">
          <thead>
            <tr>
              <th width="30">Codigo</th>
              <th>Avatar</th>
              <th>Moeda Base</th>
              <th width="350">Empresa</th>
              <th>Usuario</th>
              <th>Telefone</th>
              <th width="40"></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |c| %>
              <tr>
                <td><%= c.id.to_s.rjust(6,'0') %></td>
                <td width="40">
                  <div style="width: 40px; height: 40px;" class="fileupload-new thumbnail thumb-circle">
                    <%= image_tag c.avatar.url(:thumb) %>
                  </div>
                </td>
                <td><%= c.currency.short unless c.currency_id.blank? %></td>
                <td width="350"><%= c.name %></td>
                <td><%= c.user.email unless c.user_id.blank? %></td>
                <td><%= c.telephone %></td>
                <td width="40">
                  <%= link_to '', edit_admin_company_path(c), class: "icon-pencil" %>
                  <%= link_to '', [:admin, c], method: :delete, data: { confirm: 'Deseja realmente remover o registro?' }, class: "icon-trash" %>
                </td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>