<nav>
  <div class="breadCrumb module">
      <ul>
          <li>
              Cadastros
          </li>
          <li>&#187;</li>
          <li>
              Contatos
          </li>
      </ul>
  </div>
</nav>
<div style="color:red;">
<%= flash[:error] %>
</div>
  <div class="search_breadCrumb search">
    <div class="bts_grid">
    </div>
    <div class="row-fluid">
      <div class="span12">            
        <div data-fileupload="file" class="fileupload fileupload-new"><input type="hidden" />
          <div class="input-append">
            <%= link_to 'Novo', new_admin_contact_path, :class => "btn" %>
          </div>
        </div>
        <table class="table table-bordered dTableR" id="dt_a">
            <thead>
              <tr>
                <th width="30">Código</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Tipo</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @contacts.each do |c| %>
                <tr>
                  <td><%= c.id.to_s.rjust(6,'0') %></td>
                  <td><%= c.name %></td>
                  <td><%= c.email %></td>
                  <td><%= c.telephone %></td>
                  <td>
                  <% if c.set_type == 0 %>
                    Help/Sugestão
                  <% else %>
                    Anuncio/Parceiro
                  <% end %>
                  </td>
                  <td align="center">
                    <% if c.status == false %>
                    <span class="label label-important sl_status">Pendente</span>
                    <% else %>
                      <span class="label label-success sl_status">Respondido</span>                      
                    <% end %>
                  </td>
                  <td>
                    <%= link_to '', edit_admin_contact_path(c), class: "icon-pencil" %>
                    <%= link_to '', [:admin, c], method: :delete, data: { confirm: 'Deseja realmente remover o registro?' }, class: "icon-trash" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>