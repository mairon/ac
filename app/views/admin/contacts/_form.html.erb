<%= form_for( [:admin, @contact] , html:  {:multipart => true, class: "form-horizontal"})  do |f| %>
  <div class="row-fluid">
    <div class="span12">
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

          <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <h3 class="heading">NOVO Contato</h3>
      <div class="control-group formSep">  
      <table>
        <tr>
          <td align="right">Nome:</td>
          <td><%= f.text_field :name, size: '50' %><span class="f_req">*</span></td>
        </tr>
        <tr>
          <td align="right">Email:</td>
          <td><%= f.text_field :email, size: '50' %><span class="f_req">*</span></td>
        </tr>
        <tr>
          <td align="right">Telefone:</td>
          <td><%= f.text_field :telephone, size: '50' %><span class="f_req">*</span></td>
        </tr>
        <tr>
          <td align="right">Tipo:</td>
          <td>
          <%= f.radio_button :set_type, 0 %> Help/Sugest√£o
          <%= f.radio_button :set_type, 1 %> Anuncio/Parceiro
          </td>
        </tr>
        <tr>
          <td align="right"></td>
          <td><%= f.text_area :mensagem, rows: 5, cols: 48 %><span class="f_req">*</span></td>
        </tr>
        <tr>
          <td align="right">Status:</td>
          <td><%= f.check_box :status%><span class="f_req">*</span></td>
        </tr>

      </table>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Gravar', data: { disable_with: "Aguarde..." }, class: "btn btn-gebo" %>
      <%= link_to 'Voltar', admin_contacts_path, :class => "btn" %> 
    </div>
  </div>
<% end %>