<nav>
  <div class="breadCrumb module">
      <ul>
          <li>
              Cadastros
          </li>
          <li>&#187;</li>
          <li>
              Moedas
          </li>
      </ul>
  </div>
</nav>
<style type="text/css">
  form{ float: left;}
  select{  width: 250px; margin:0px !important; }
</style>

<div style="color:red;">
<%= flash[:error] %>
</div>
<div class="search_breadCrumb search">
  <div class="bts_grid">
  </div>
  <div class="row-fluid">
    <div class="span12">            
      <div data-fileupload="file" class="fileupload fileupload-new"><input type="hidden" />
        <div class="input-append">
          <%= link_to 'Novo', new_admin_currency_path, :class => "btn" %>
        </div>
      </div>
      <table class="table table-bordered dTableR" id="dt_a">
          <thead>
            <tr>
              <th width="30">Codigo</th>
              <th width="35"  align="center">Icon</th>
              <th>Moedas</th>
              <th>Sigla</th>
              <th align="right">Decimal</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @currencies.each do |c| %>
              <tr>
                <td><%= c.id.to_s.rjust(6,'0') %></td>
                <td><%= image_tag c.icon.url(:thumb) %></td>
                <td align="center"><%= c.name %></td>
                <td><%= c.short %></td>
                <td align="right"><%= c.dec %></td>
                <td>
                  <%= link_to '', edit_admin_currency_path(c), class: "icon-pencil" %>
                  <%= link_to '', [:admin, c], method: :delete, data: { confirm: 'Deseja realmente remover o registro?' }, class: "icon-trash" %>
                </td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
