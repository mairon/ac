<div class="row-fluid">
  <div class="span12">
  <%= form_for( [:admin, @city] , html:  {:multipart => true, class: "form-horizontal"})  do |f| %>

    <% if @city.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

        <ul>
        <% @city.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <h3 class="heading">NOVA CIDADE</h3>
    <div class="control-group formSep">  
    <table>
      <tr>
        <td align="right">Pa√≠s:</td>
        <td><%= f.collection_select :country_id, Country.select('id,name').order('2'), :id, :name, {prompt: 'Selecione'},{style: 'width: 225px', autofocus: true} %><span class="f_req">*</span></td>
      </tr>
      <tr>
        <td align="right">Estados:</td>
        <td><%= f.collection_select :state_id, State.select('id,name').order('2'), :id, :name, {prompt: 'Selecione'},{style: 'width: 225px'} %><span class="f_req">*</span></td>
      </tr>
      <tr>
        <td align="right">Cidade:</td>
        <td><%= f.text_field :name, size: '30', placeholder: 'Nome da Cidade' %><span class="f_req">*</span></td>
      </tr>
    </table>
    </div>
    </div>
    <div class="actions">
      <%= f.submit 'Gravar', data: { disable_with: "Aguarde..." }, class: "btn btn-gebo" %>
      <%= link_to 'Voltar', admin_cities_path, :class => "btn" %> 
    </div>
</div>
<% end %>
