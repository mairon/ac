<%= form_for("user", :url => user_session_path,
           :html => {:id => "sign_in_user"},
           :remote => true ) do |f| %>
  <%= f.text_field :email, autocomplete: "off", placeholder: 'E-mail', class: 'form-control' %>
  <%= f.password_field :password , autocomplete: "off", placeholder: 'Senha', class: 'form-control' %>
  <%= f.submit 'Entrar', class: 'sign_in btn', data: { disable_with: "Aguarde..." } %>
<% end %>
